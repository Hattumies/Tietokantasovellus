<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Character</servlet-name>
        <servlet-class>hahmolista.servlets.CharacterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>hahmolista.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewCharacterServlet</servlet-name>
        <servlet-class>hahmolista.servlets.NewCharacterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayerServlet</servlet-name>
        <servlet-class>hahmolista.servlets.PlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewPlayerServlet</servlet-name>
        <servlet-class>hahmolista.servlets.NewPlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>hahmolista.servlets.ItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewItemServlet</servlet-name>
        <servlet-class>hahmolista.servlets.NewItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TemplateServlet</servlet-name>
        <servlet-class>hahmolista.servlets.TemplateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>hahmolista.servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Character</servlet-name>
        <url-pattern>/char</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewCharacterServlet</servlet-name>
        <url-pattern>/NewCharacter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayerServlet</servlet-name>
        <url-pattern>/player</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewPlayerServlet</servlet-name>
        <url-pattern>/NewPlayer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemServlet</servlet-name>
        <url-pattern>/item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewItemServlet</servlet-name>
        <url-pattern>/newItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TemplateServlet</servlet-name>
        <url-pattern>/TemplateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
